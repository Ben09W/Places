<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @place.name %> at <%= @place.datetime_start.strftime("%l:%M%P") %> on <%= @place.datetime_start.strftime("%a %b  %e %Y") %>
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/places" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_place/<%= @place.id %>" class="btn btn-block btn-outline-secondary">
          Delete place
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @place.owner_id %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @place.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @place.description %>
      </dd>

      <dt>
        Datetime start
      </dt>
      <dd>
        <%= @place.datetime_start.strftime("%l:%M%P %a %b  %e %Y") %>
      </dd>

      <dt>
        Datetime end
      </dt>
      <dd>
        <%= @place.datetime_end.strftime("%l:%M%P %a %b  %e %Y") %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @place.address %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@place.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@place.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit place
    </h2>

    <form action="/modify_place/<%= @place.id %>"  method="post" >
      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" class="form-control" value="<%= @place.owner_id %>">
      </div>

      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control" value="<%= @place.name %>">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" class="form-control" rows="3"><%= @place.description %></textarea>
      </div>

      <div class="form-group">
        <label for="datetime_start_box">
          Datetime start
        </label>

        <input type="datetime-local" id="datetime_start_box" name="query_datetime_start"
          class="form-control" value="<%= @place.datetime_start %>">
      </div>

      <div class="form-group">
        <label for="datetime_end_box">
          Datetime end
        </label>

        <input type="datetime-local" id="datetime_end_box" name="query_datetime_end"
          class="form-control" value="<%= @place.datetime_end %>">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" class="form-control" value="<%= @place.address %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update place
      </button>
    </form>
  </div>
</div>

<hr>
