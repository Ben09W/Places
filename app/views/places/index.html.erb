<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all places
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new place
    </h2>

    <form action="/insert_place" method="post">
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="datetime_start_box">
          Datetime start
        </label>

        <input type="datetime-local" id="datetime_start_box" name="query_datetime_start" class="form-control">
      </div>

      <div class="form-group">
        <label for="datetime_end_box">
          Datetime end
        </label>

        <input type="datetime-local" id="datetime_end_box" name="query_datetime_end" class="form-control">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create place
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        
        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Datetime start
        </th>

        <th>
          Datetime end
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @places.each do |place| %>
      <tr>
  
        <td>
          <%= place.name %>
        </td>

        <td>
          <%= place.description %>
        </td>

        <td>
          <%= place.datetime_start.strftime("%l:%M%P %a %b  %e %Y") %>
        </td>

        <td>
          <%= place.datetime_end.strftime("%l:%M%P %a %b  %e %Y") %>
        </td>

        <td>
          <%= place.address %>
        </td>

        <td>
          <%= time_ago_in_words(place.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(place.updated_at) %> ago
        </td>

        <td>
          <a href="/places/<%= place.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
